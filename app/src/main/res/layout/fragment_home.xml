<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.dashboard.fragment.HomeFragment"
    android:background="@color/rich_black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/featureLayout"
                layout="@layout/feature_layout"/>

            <include
                android:id="@+id/popularActorLayout"
                layout="@layout/popular_actors_layout"/>

            <include
                android:id="@+id/nowComingLayout"
                layout="@layout/now_coming_layout"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>